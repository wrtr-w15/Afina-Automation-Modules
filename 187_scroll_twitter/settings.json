    {
      "name": "saveTo",
      "label": "Сохранить последний индекс в переменную",
      "type": "text",
      "default": "lastTweetIndex"
    },
    {
      "name": "description",
      "label": "Описание",
      "type": "text",
      "default": "Twitter: прокрутка по XPath, с начала, остановками, мышью и сохранением индекса"
    }
  ]
}